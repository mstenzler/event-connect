<p id="notice"><%= notice %></p>

<h2 class="center-align">Events</h2>

<% @events.each do |event| %>
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title white-text"><%= event.title %></span>
          <p>Time: <%= event.start_time_display_short %> <% if event.end_time %> to <%= event.end_time_display_short %> <% end %>
          </p>
          <br >

          <p>Venue: <%= event.venue_name %><br />
            <%= event.venue_address %> <%= event.venue_zip %>
          </p>
          
        <div>
        <div class="card-action">
          <%= link_to 'Show Event', event, class: "btn waves-effect waves-light orange" %>
          <% if (event.can_modify(current_user)) %>
            <%= link_to 'Edit', edit_event_path(event), class: "btn waves-effect waves-light orange" %>
            <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn waves-effect waves-light orange" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

