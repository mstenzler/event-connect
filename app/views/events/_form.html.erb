<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :venue_name %>
    <%= f.text_field :venue_name %>
  </div>

  <div class="field">
    <%= f.label :venue_address %>
    <%= f.text_field :venue_address %>
  </div>

  <div class="field">
    <%= f.label :venue_zip %>
    <%= f.text_field :venue_zip %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :start_date_date, "Start Date" %>
    <%= f.text_field :start_date_date, class: "datepicker"%>
  </div>

  <div class="field">
    <%= f.label :start_date_time, 'Start Time' %>
    <%= f.text_field :start_date_time, class: "timepicker"%>
  </div>

  <div class="field">
    <%= f.label :end_date_date, "End Date" %>
    <%= f.text_field :end_date_date, class: "datepicker"%>
  </div>

  <div class="field">
    <%= f.label :end_date_time, 'End Time' %>
    <%= f.text_field :end_date_time, class: "timepicker"%>
  </div>

 

  <div class="actions">
    <%= f.submit class: "btn waves-effect waves-light orange" %>
  </div>
<% end %>
<script type="text/javascript">
    $('#event_start_date_time').clockpicker({
      placement: 'bottom',
      align: 'left',
      twelvehour: true
    });
    $('#event_end_date_time').clockpicker({
      placement: 'bottom',
      align: 'left',
      twelvehour: true
    });
    $('.input_endtime').clockpicker({
      placement: 'bottom',
      align: 'left',
      darktheme: true,
      twelvehour: false
    });
    $('.datepicker').pickadate();
  </script>
